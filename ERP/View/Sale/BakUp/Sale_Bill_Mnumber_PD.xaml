                    <TextBlock Text="{Binding UIText[ERP_TempAddress]}" Grid.Column="4" Grid.Row="6" />
                    <ex:TBTempAddress Grid.Column="5" Grid.Row="6" Grid.ColumnSpan="3" TabIndex="5" />

