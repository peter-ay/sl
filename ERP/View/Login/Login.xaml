<ex:UserControlErp
x:Class="ERP.View.Login"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:ignore="http://www.ignore.com"
mc:Ignorable="d ignore"
xmlns:ex="clr-namespace:ERP.View"
DataContext="{Binding Login, Mode=OneWay, Source={StaticResource Locator}}">
    <Grid Name="LayoutRoot">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#EDF3FC" Offset="0.1" />
                <GradientStop Offset="0.861" Color="#C6DDF7" />
                <GradientStop Offset="1" Color="#99C6EE" />
                <GradientStop Color="#D9E9F9" Offset="1" />
                <GradientStop Color="White" Offset="0.435"/>
                <GradientStop Color="#FFF9FBFE" Offset="0.509"/>
                <GradientStop Color="#FFFBFCFE" Offset="0.243"/>
                <GradientStop Color="#FFFDFDFE" Offset="0.283"/>
            </LinearGradientBrush>
        </Grid.Background>
    </Grid>
</ex:UserControlErp>
